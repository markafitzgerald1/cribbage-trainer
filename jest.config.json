{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts",
    "!src/stories/*.stories.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  },
  "moduleNameMapper": {
    "\\.module\\.css$": "<rootDir>/__mocks__/styleMock.ts"
  },
  "testEnvironment": "jsdom",
  "testPathIgnorePatterns": ["/tests-e2e/", "/tests-examples"]
}
