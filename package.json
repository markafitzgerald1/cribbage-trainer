{
  "name": "cribbage-trainer",
  "description": "Two-player cribbage discard and play improvement tool.",
  "version": "0.1.0",
  "source": "src/index.html",
  "scripts": {
    "prepare": "husky install",
    "test": "jest --verbose",
    "test-e2e": "playwright test",
    "lintThenTypeCopyPasteOutdatedAndAuditCheck": "npm run lint && npm run typeCheck && npm run jscpd && npm outdated && npm audit",
    "lint": "eslint --max-warnings 0 . && stylelint '**/*.css' && markdownlint README.md && prettier --check . && cspell '**' --gitignore",
    "stylelint": "stylelint --fix '**/*.css'",
    "prettier": "prettier --write .",
    "typeCheck": "tsc",
    "jscpd": "jscpd",
    "build": "parcel build --reporter @parcel/reporter-bundle-analyzer --public-url /cribbage-trainer --detailed-report 40",
    "start": "parcel serve --reporter @parcel/reporter-bundle-analyzer --public-url /cribbage-trainer",
    "clean": "rm -rf dist parcel-bundle-reports coverage .parcel-cache"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@jest/globals": "^29.5.0",
    "@parcel/reporter-bundle-analyzer": "^2.8.3",
    "@playwright/test": "^1.37.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^20.4.10",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.0.6",
    "@types/seedrandom": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "babel-jest": "^29.5.0",
    "cspell": "^7.0.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-spellcheck": "^0.0.20",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jscpd": "^3.5.3",
    "markdownlint-cli": "^0.35.0",
    "parcel": "^2.8.3",
    "prettier": "^3.0.1",
    "process": "^0.11.10",
    "seedrandom": "^3.0.5",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markafitzgerald1/cribbage-trainer.git"
  },
  "keywords": [
    "cribbage",
    "trainer",
    "analysis"
  ],
  "author": "Mark A. Fitzgerald <mark.a.fitzgerald1@gmail.com>",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/markafitzgerald1/cribbage-trainer/issues"
  },
  "homepage": "https://github.com/markafitzgerald1/cribbage-trainer#readme",
  "dependencies": {
    "js-combinatorics": "^2.1.1",
    "Package": "^0.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
