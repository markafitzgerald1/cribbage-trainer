{
  "name": "cribbage-trainer",
  "description": "Two-player cribbage discard and play improvement tool.",
  "version": "0.1.0",
  "source": "src/index.html",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint --max-warnings 0 . && stylelint '**/*.css' && markdownlint README.md && prettier --check . && cspell '**' --gitignore && tsc && jscpd && better-npm-audit audit && (check-outdated || true)",
    "prettier:fix": "prettier --write .",
    "test": "jest --verbose",
    "playwright:install": "playwright install --with-deps",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build --output-dir dist/storybook",
    "storybook:test": "npm run storybook:build && npx --no-install concurrently --kill-others --success first --names 'Storybook,Test' 'npx --no-install http-server dist/storybook --port 6006 --silent > /dev/null 2>&1 | tail -f /dev/null' 'npx --no-install wait-on --timeout 1s tcp:6006 && test-storybook --browsers chromium webkit firefox'",
    "test-e2e": "playwright test",
    "docker-test-e2e": "docker build -t cribbage-trainer-e2e-test . && docker run --rm --volume ${PWD}/playwright-report:/usr/src/app/playwright-report --volume ${PWD}/test-results:/usr/src/app/test-results --volume ${PWD}/tests-e2e/index.screenshots.spec.ts-snapshots:/usr/src/app/tests-e2e/index.screenshots.spec.ts-snapshots cribbage-trainer-e2e-test",
    "build": "vite build",
    "start": "vite",
    "start:production-preview": "vite build && vite preview",
    "clean": "rimraf .VSCodeCounter/ coverage/ dist/ playwright-report/ storybook-static/ test-results/ tsconfig.tsbuildinfo",
    "node_modules:clean": "rimraf node_modules/"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.42.1",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/jest": "^0.2.3",
    "@storybook/react": "^7.6.17",
    "@storybook/react-vite": "^8.0.5",
    "@storybook/test-runner": "^0.16.0",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@tsconfig/vite-react": "^3.0.1",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "better-npm-audit": "^3.7.3",
    "check-outdated": "^2.12.0",
    "concurrently": "^8.2.2",
    "cspell": "^8.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.1",
    "eslint-plugin-spellcheck": "^0.0.20",
    "eslint-plugin-storybook": "^0.8.0",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jscpd": "^3.5.10",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.5",
    "process": "^0.11.10",
    "rimraf": "^5.0.5",
    "seedrandom": "^3.0.5",
    "storybook": "^7.6.17",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "wait-on": "^7.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markafitzgerald1/cribbage-trainer.git"
  },
  "keywords": [
    "cribbage",
    "trainer",
    "analysis"
  ],
  "author": "Mark A. Fitzgerald <mark.a.fitzgerald1@gmail.com>",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/markafitzgerald1/cribbage-trainer/issues"
  },
  "homepage": "https://github.com/markafitzgerald1/cribbage-trainer#readme",
  "dependencies": {
    "js-combinatorics": "^2.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "@parcel/transformer-css": {
    "cssModules": {
      "dashedIdents": true
    }
  }
}
