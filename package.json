{
  "name": "cribbage-trainer",
  "description": "Two-player cribbage discard and play improvement tool.",
  "version": "0.1.0",
  "source": "src/index.html",
  "scripts": {
    "prepare": "husky",
    "lint:eslint": "eslint --max-warnings 0 '**/*.{js,ts,tsx,mjs}'",
    "lint:stylelint": "stylelint '**/*.css'",
    "lint:markdown": "markdownlint README.md",
    "lint:prettier": "prettier --check .",
    "lint:cspell": "cspell '**' --gitignore",
    "lint:tsc": "tsc",
    "lint:jscpd": "jscpd",
    "lint:audit": "better-npm-audit audit",
    "lint:outdated": "(check-outdated || true)",
    "lint": "concurrently --names 'ESLINT,STYLE,MARKDOWN,PRETTIER,CSPELL,TSC,JSCPD,AUDIT,OUTDATED' --success first \"npm:lint:eslint\" \"npm:lint:stylelint\" \"npm:lint:markdown\" \"npm:lint:prettier\" \"npm:lint:cspell\" \"npm:lint:tsc\" \"npm:lint:jscpd\" \"npm:lint:audit\" \"npm:lint:outdated\"",
    "prettier:fix": "prettier --write .",
    "test": "jest --verbose",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build --output-dir dist/storybook",
    "storybook:serve": "npx --no-install http-server dist/storybook --port 6006",
    "storybook:test": "npx --no-install concurrently --kill-others --success first --names 'Storybook,Test' 'npm run storybook:serve -- --silent > /dev/null 2>&1 | tail -f /dev/null' 'npx --no-install wait-on --timeout 1s tcp:6006 && test-storybook --browsers chromium webkit firefox'",
    "test-e2e": "playwright test",
    "docker:build-test-suite": "docker build -t cribbage-trainer-integration-tests . && npm run docker:run-e2e-tests",
    "docker:run-e2e-tests": "docker run --rm --volume ${PWD}/playwright-report:/usr/src/app/playwright-report --volume ${PWD}/test-results:/usr/src/app/test-results --volume ${PWD}/tests-e2e/index.screenshots.spec.ts-snapshots:/usr/src/app/tests-e2e/index.screenshots.spec.ts-snapshots cribbage-trainer-integration-tests:latest",
    "build": "vite build",
    "start": "vite",
    "start:production-preview": "vite build && vite preview",
    "clean": "rimraf .VSCodeCounter/ coverage/ dist/ playwright-report/ storybook-static/ test-results/ tsconfig.tsbuildinfo",
    "node_modules:clean": "rimraf node_modules/"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/compat": "^1.2.9",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.52.0",
    "@storybook/addon-actions": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.4.6",
    "@storybook/test-runner": "^0.22.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/vite-react": "^3.4.0",
    "@types/node": "^22.15.19",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-vite-meta-env": "^1.0.3",
    "better-npm-audit": "^3.11.0",
    "check-outdated": "^2.13.0",
    "concurrently": "^9.1.2",
    "cspell": "^9.0.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-spellcheck": "^0.0.20",
    "eslint-plugin-storybook": "^0.12.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jscpd": "^4.0.5",
    "markdownlint-cli": "^0.44.0",
    "prettier": "^3.5.3",
    "process": "^0.11.10",
    "rimraf": "^6.0.1",
    "seedrandom": "^3.0.5",
    "storybook": "^8.4.6",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "^5.8.3",
    "vite": "^6.0.11",
    "wait-on": "^8.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markafitzgerald1/cribbage-trainer.git"
  },
  "keywords": [
    "cribbage",
    "trainer",
    "analysis"
  ],
  "author": "Mark A. Fitzgerald <mark.a.fitzgerald1@gmail.com>",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/markafitzgerald1/cribbage-trainer/issues"
  },
  "homepage": "https://github.com/markafitzgerald1/cribbage-trainer#readme",
  "dependencies": {
    "js-combinatorics": "^2.1.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "@parcel/transformer-css": {
    "cssModules": {
      "dashedIdents": true
    }
  }
}
