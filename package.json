{
  "name": "cribbage-trainer",
  "description": "Two-player cribbage discard and play improvement tool.",
  "version": "0.1.0",
  "source": "src/index.html",
  "scripts": {
    "prepare": "husky install",
    "lintTypeCheckAuditAndOutdatedCheck": "npm run lint && npm run typeCheck && npm audit && npm outdated",
    "lint": "eslint . && stylelint '**/*.css' && prettier --check . && cspell '**' --gitignore",
    "stylelint": "stylelint --fix '**/*.css'",
    "prettier": "prettier --write .",
    "typeCheck": "tsc",
    "build": "parcel build --public-url /cribbage-trainer --detailed-report",
    "start": "parcel serve --public-url /cribbage-trainer --detailed-report",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "cspell": "^6.26.3",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-spellcheck": "^0.0.20",
    "husky": "^8.0.3",
    "parcel": "^2.8.3",
    "prettier": "^2.8.4",
    "process": "^0.11.10",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "typescript": "^4.8.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markafitzgerald1/cribbage-trainer.git"
  },
  "keywords": [
    "cribbage",
    "trainer",
    "analysis"
  ],
  "author": "Mark A. Fitzgerald <mark.a.fitzgerald1@gmail.com>",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/markafitzgerald1/cribbage-trainer/issues"
  },
  "homepage": "https://github.com/markafitzgerald1/cribbage-trainer#readme",
  "dependencies": {
    "js-combinatorics": "^2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
